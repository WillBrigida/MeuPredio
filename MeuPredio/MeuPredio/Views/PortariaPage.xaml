<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MeuPredio.Views.PortariaPage"
    BackgroundColor="White"
    Title="Portaria">
    
    
    
    <ContentPage.Content >
        <StackLayout>
            
        
       
            <Grid
                RowSpacing="-20"
                Margin="20,0"
                HorizontalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>

                <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                     <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
           

            

            <Button
                Padding="0,30"
                BackgroundColor="White"
                Grid.Column="0"
                Grid.Row="1"
                FontSize="35"
                Text="&#xf500;"
                Command="{Binding ListaFuncionariosCommand} "
                Style="{StaticResource MainMenuIconsStyle}"/>



            
            <Label 
                HorizontalOptions="Center"
                Grid.Column="0"
                Grid.Row="2"
                FontSize="12"
                Text="Funcionários">
               
            </Label>

           

            <Button
                Padding="0,30"
                BackgroundColor="White"
                Grid.Column="1"
                Grid.Row="1"
                FontSize="35"
                TextColor="#000000"
                Text="&#xf518;"
                Command="{Binding OcorrenciasCommand}"
                Style="{StaticResource MainMenuIconsStyle}"/>



            <Label 
                HorizontalOptions="Center"
                Grid.Column="1"
                FontSize="12"
                Grid.Row="2"
                Text="Ocorrências"/>



            <Button
                Padding="0,30"
                BackgroundColor="White"
                Grid.Column="2"
                Grid.Row="1"
                FontSize="35"
                Text="&#xf466;"
                TextColor="#e1c27f"
                Command="{Binding EncomendasCommand} "
                Style="{StaticResource MainMenuIconsStyle}"/>

            <Label 
                HorizontalOptions="Center"
                Grid.Column="2"
                FontSize="12"
                Grid.Row="2"
                Text="Encomendas">
                
            </Label>


            <Button
                Padding="0,30"
                BackgroundColor="White"
                Grid.Column="0"
                Grid.Row="3"
                FontSize="35"
                Text="&#xf2bb;"
                TextColor="Blue"
                Command="{Binding ContatosCommand}"
                Style="{StaticResource MainMenuIconsStyle}"/>


           

            <Label 
                HorizontalOptions="Center"
                Grid.Column="0"
                FontSize="12"
                Grid.Row="4"
                Text="Contatos"/>

            
            <Button
                Padding="0,30"
                BackgroundColor="White"
                Grid.Column="1"
                Grid.Row="3"
                FontSize="35"
                Text="&#xf007;"
                TextColor="Red"
                Command="{Binding SindicoCommand} "
                Style="{StaticResource MainMenuIconsStyle}"/>

            <Label 
                HorizontalOptions="Center"
                Grid.Column="1"
                FontSize="12"
                Grid.Row="4"
                Text="Sindico">
               
            </Label>


         
               
           

            <Button
                Padding="0,30"
                BackgroundColor="White"
                Grid.Column="2"
                Grid.Row="3"
                FontSize="35"
                Text="&#xf500;"
                TextColor="#49a4aa"
                Command="{Binding RegrasCommand}"
                Style="{StaticResource MainMenuIconsStyle}"/>

                

                
            <Label 
                HorizontalOptions="Center"
                Grid.Column="2"
                FontSize="14"
                Grid.Row="4"
                Text="Regras">
               
            </Label>

         

            

        </Grid>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>