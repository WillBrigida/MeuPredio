<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MeuPredio.Views.MenuPage"
    
    xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin">


    <MasterDetailPage.Master>
        <ContentPage
            Title="Menu">
            <StackLayout
                BackgroundColor="White">

                <!-- ###########################################-->
                <!-- ###########################################-->
                <!-- ###########################################-->
                <!-- ###########################################-->
                <!-- ################  PERFIL ##################-->

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Image 
                        Source="perfil" 
                        Aspect="AspectFill"/>
                    
                    
                    <StackLayout 
                            Padding="0,20,0,0" 
                            HorizontalOptions="CenterAndExpand" 
                            VerticalOptions="CenterAndExpand">
                        
                        
                        <controls:CircleImage
                            BorderColor="White"
                            BorderThickness="2" 
                            Source="wb.png" 
                            Aspect="AspectFill" 
                            WidthRequest="85" 
                            HeightRequest="85" />
                        
                        
                        <Label 
                            Text="Will Brigida" 
                            TextColor="White" 
                            FontSize="Large" />

                    </StackLayout>
                </Grid>

                <!-- ################ FIM  PERFIL ##############-->
                <!-- ###########################################-->
                <!-- ###########################################-->
                <!-- ###########################################-->
                <!-- ###############  LISTA MENU ###############-->

                <ListView
                    SeparatorVisibility="None"
                    SelectionMode="None"
                    ItemsSource="{Binding ListaMenu, Mode=TwoWay}"
                    HasUnevenRows="False">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid
                                    Padding="20,0" >

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>


                                    <Label
                                        TextColor="{Binding Cor}"
                                        Text="{Binding Icone}"
                                        Style="{StaticResource MainMenuIconsStyle}"/>


                                    <Label
                                        FontSize="16"
                                        TextColor="Black"
                                        VerticalOptions="Center"
                                        Grid.Column="1"
                                        Text="{Binding Titulo}"/>


                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

                <!-- ############ FIM  LISTA MENU ##############-->
                <!-- ###########################################-->
                <!-- ###########################################-->
                <!-- ###########################################-->
                <!-- ###############  LINHA ####################-->

                <ContentView 
                        Margin="10"
                        HeightRequest="0.5" BackgroundColor="Gray" />


                <!-- ############ FIM  LINHA ###################-->
                <!-- ###########################################-->
                <!-- ###########################################-->
                <!-- ###########################################-->
                <!-- ############# BOTÃO SAIR ##################-->

                <Grid
                    RowSpacing="50"
                    HeightRequest="50"
                    Margin="20,0,0,10">
                    
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SairCommand}"/>
                    </Grid.GestureRecognizers>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label  
                        Text="&#xf011;"
                        TextColor="Red"
                        Style="{StaticResource MainMenuIconsStyle}"/>

                    <Label 
                        TextColor="Black"
                        Text="Sair" 
                        FontSize="16" 
                        Grid.Column="1" />

                </Grid>

                <!-- ########### FIM BOTÃO SAIR ################-->
                <!-- ###########################################-->
                <!-- ###########################################-->
                <!-- ###########################################-->

            </StackLayout>

        </ContentPage>
    </MasterDetailPage.Master>

