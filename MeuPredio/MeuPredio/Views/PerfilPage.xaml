<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MeuPredio.Views.PerfilPage"
    Title="Perfil"
     xmlns:local="clr-namespace:MeuPredio.ViewModels.Menu.Portaria"
    BackgroundColor="White"
    xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin">


    <ContentPage.ToolbarItems>
        
        <ToolbarItem 
            Icon="baseline_more_vert_white_24.png"
            Command="{Binding MoreCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.BindingContext>
        <local:SindicoViewModel/>
    </ContentPage.BindingContext>

<ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--foto , função e status-->
                    
                    <StackLayout
                        Grid.Row="0"
                        Margin="25">
                        <Grid
                            RowSpacing="7"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                TextColor="Black"
                                HorizontalOptions="Center"
                                FontSize="20"
                                FontAttributes="Bold"
                                Text="{Binding Nome, Mode=TwoWay}"/>

                            
                            <Label
                                Grid.Row="1"
                                TextColor="gray"
                                HorizontalOptions="Center"
                                FontSize="15"
                                Text="{Binding Funcao}"/>


                            <controls:CircleImage
                                Grid.Row="2"
                                BorderColor="#65B980"
                                BorderThickness="3" 
                                Source="{Binding Imagem}" 
                                WidthRequest="120" 
                                HeightRequest="120" />

                            
                            <Label
                                Grid.Row="3"
                                FontSize="14"
                                HorizontalOptions="Center"
                                Text="{Binding Descricao}"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"
                                TextColor="{Binding Color}"/>

                        </Grid>
                        
                     
                    </StackLayout>

                    <BoxView 
                        Margin="20,0"
                        Grid.Row="1"
                        HeightRequest="0.4" 
                        BackgroundColor="Gray" />
