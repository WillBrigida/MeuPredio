                            <Label
                                Grid.Column="1"
                                TextColor="Black"
                                FontSize="16"
                                Text="{Binding Email}"/>

                            <Label
                                Margin="0,25,0,0"
                                Grid.Column="1"
                                FontSize="14"
                                TextColor="gray"
